	<group if="1">
	<param name="/youbotPID/linear_x/p" value="1" type="double" />
	<param name="/youbotPID/linear_x/i" value="0" type="double" />
	<param name="/youbotPID/linear_x/d" value="0" type="double" />
	<param name="/youbotPID/linear_x/i_clamp" value="0.7" type="double" />
